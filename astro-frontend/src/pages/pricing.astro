---
import ServicePageLayout from '../layouts/ServicePageLayout.astro';
import pricingData from '../../../public/api/pages/pricing.json';

const page = pricingData;
const PHONE_LINK = 'tel:+972508585310';
const PHONE_DISPLAY = '050-858-5310';
---
<ServicePageLayout
  title={page.seo.title}
  description={page.seo.description}
  keywords={page.seo.keywords}
  canonical={page.seo.canonical}
  breadcrumbs={page.breadcrumbs}
  structuredData={page.structuredData}
>
  <!-- Hero Section -->
  <section class="py-12 md:py-20 bg-gradient-to-b from-primary/5 to-background">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-3xl md:text-5xl font-black mb-6" style="text-wrap: balance;">{page.h1}</h1>
        <p class="text-lg md:text-xl text-muted-foreground mb-8" style="text-wrap: pretty;">{page.sections[0].subtitle}</p>
      </div>
    </div>
  </section>

  <!-- Price Ranges -->
  {page.sections.find(s => s.id === 'price-tiers') && (() => {
    const tiers = page.sections.find(s => s.id === 'price-tiers')!;
    return (
      <section class="py-12 md:py-16">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{tiers.h2}</h2>
            <div class="bg-card p-8 rounded-2xl border border-primary/20 border-2 text-center mb-8">
              <p class="text-3xl md:text-4xl font-black text-primary mb-2">{tiers.summary}</p>
              <p class="text-muted-foreground">{tiers.note}</p>
            </div>
            <div class="grid md:grid-cols-3 gap-6">
              {tiers.items.map((tier, i) => (
                <div class:list={['bg-card p-6 rounded-2xl border', i === 2 ? 'border-primary/50 border-2' : 'border-border']}>
                  <h3 class="font-bold text-lg mb-2">{tier.name}</h3>
                  <p class="text-2xl font-bold text-primary mb-2">{tier.price}</p>
                  <ul class="text-sm text-muted-foreground space-y-1">
                    {tier.features.map((f) => (
                      <li>• {f}</li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>
    );
  })()}

  <!-- Pricing Factors -->
  {page.sections.find(s => s.id === 'factors') && (() => {
    const factors = page.sections.find(s => s.id === 'factors')!;
    return (
      <section class="py-12 md:py-16 bg-muted/30">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{factors.h2}</h2>
            <div class="grid md:grid-cols-2 gap-6">
              {factors.items.map((item) => (
                <div class="bg-card p-6 rounded-2xl border border-border">
                  <h3 class="font-bold text-lg mb-4">{item.title}</h3>
                  <p class="text-muted-foreground text-sm">{item.description}</p>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>
    );
  })()}

  <!-- What's Included -->
  {page.sections.find(s => s.id === 'included') && (() => {
    const included = page.sections.find(s => s.id === 'included')!;
    return (
      <section class="py-12 md:py-16">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{included.h2}</h2>
            <div class="grid md:grid-cols-2 gap-8">
              {included.groups.map((group) => (
                <div>
                  <h3 class="font-bold text-lg mb-4 flex items-center gap-2">✓ {group.title}</h3>
                  <ul class="space-y-2 text-muted-foreground">
                    {group.items.map((item) => (
                      <li class="flex items-start gap-2">
                        <span class="text-primary mt-0.5 flex-shrink-0">✓</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>
    );
  })()}

  <!-- CTA -->
  <section class="py-16 md:py-20">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center bg-card p-8 md:p-12 rounded-2xl border-2 border-primary/30">
        <h2 class="text-2xl md:text-4xl font-black mb-6 text-foreground">
          קבל הצעת מחיר מדויקת תוך 24 שעות
        </h2>
        <p class="text-lg text-muted-foreground mb-8">
          התקשר עכשיו או השאר פרטים - ניצור קשר במהרה עם הצעה מפורטת ושקופה
        </p>
        <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-2 px-8 py-4 rounded-xl text-lg font-bold">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          <span>{PHONE_DISPLAY}</span>
        </a>
      </div>
    </div>
  </section>

  <!-- Internal Links -->
  {page.sections.find(s => s.id === 'internal-links') && (() => {
    const links = page.sections.find(s => s.id === 'internal-links')!;
    return (
      <section class="py-12">
        <div class="container">
          <div class="max-w-4xl mx-auto">
            <h3 class="text-lg font-bold mb-4">קישורים נוספים:</h3>
            <div class="flex flex-wrap gap-4">
              {links.items.map((link) => (
                <a href={link.href} class="text-primary hover:underline">{link.label}</a>
              ))}
            </div>
          </div>
        </div>
      </section>
    );
  })()}
</ServicePageLayout>
