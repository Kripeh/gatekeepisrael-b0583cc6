---
import ServicePageLayout from '../layouts/ServicePageLayout.astro';
import SectionDivider from '../components/SectionDivider.astro';
import pricingData from '../../../public/api/pages/pricing.json';

const page = pricingData;
const PHONE_LINK = 'tel:+972508585310';
const PHONE_DISPLAY = '050-858-5310';

const hero = (page.sections as any[]).find(s => s.type === 'hero');
const calculatorCta = (page.sections as any[]).find(s => s.type === 'calculator-cta');
const priceTiers = (page.sections as any[]).find(s => s.type === 'price-tiers');
const factors = (page.sections as any[]).find(s => s.type === 'factors');
const included = (page.sections as any[]).find(s => s.type === 'included');
const warning = (page.sections as any[]).find(s => s.type === 'warning');
const cta = (page.sections as any[]).find(s => s.type === 'cta');
---
<ServicePageLayout
  title={page.seo.title}
  description={page.seo.description}
  keywords={page.seo.keywords}
  canonical={page.seo.canonical}
  breadcrumbs={page.breadcrumbs}
  structuredData={page.structuredData}
>
  <!-- Hero Section -->
  <section class="py-12 md:py-20 bg-gradient-to-b from-primary/5 to-background">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        {hero?.badge && (
          <div class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full mb-6">
            <span class="font-bold">{hero.badge}</span>
          </div>
        )}
        <h1 class="text-3xl md:text-5xl font-black mb-6" style="text-wrap: balance;">{page.h1}</h1>
        <p class="text-lg md:text-xl text-muted-foreground mb-8" style="text-wrap: pretty;">{hero?.subtitle}</p>
      </div>
    </div>
  </section>

  <!-- Calculator CTA -->
  {calculatorCta && (
    <section class="py-8 md:py-12">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center bg-card p-6 md:p-8 rounded-2xl border border-primary/20">
          <h2 class="text-xl md:text-2xl font-bold mb-3">{calculatorCta.h2}</h2>
          <p class="text-muted-foreground mb-4">{calculatorCta.content}</p>
          <a href="/#calculator" class="btn-cta-glow inline-flex items-center gap-2 px-6 py-3 rounded-xl text-base font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="20" x="4" y="2" rx="2"/><line x1="8" x2="16" y1="6" y2="6"/><line x1="16" x2="16" y1="14" y2="18"/><path d="M16 10h.01"/><path d="M12 10h.01"/><path d="M8 10h.01"/><path d="M12 14h.01"/><path d="M8 14h.01"/><path d="M12 18h.01"/><path d="M8 18h.01"/></svg>
            <span>למחשבון מחירים</span>
          </a>
        </div>
      </div>
    </section>
  )}

  <SectionDivider />

  <!-- Price Tiers -->
  {priceTiers && (
    <section id="price-ranges" class="py-12 md:py-16">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{priceTiers.h2}</h2>
          <div class="bg-card p-8 rounded-2xl border border-primary/20 border-2 text-center mb-4">
            <p class="text-3xl md:text-4xl font-black text-primary mb-2">{priceTiers.mainPrice}</p>
            <p class="text-muted-foreground">{priceTiers.mainNote}</p>
          </div>
          <p class="text-sm text-muted-foreground text-center mb-8">{priceTiers.disclaimer}</p>
          <div class="grid md:grid-cols-3 gap-6">
            {priceTiers.tiers?.map((tier: any, i: number) => (
              <div class:list={['bg-card p-6 rounded-2xl border transition-all duration-300 hover:-translate-y-1', i === 2 ? 'border-primary/50 border-2 shadow-lg shadow-primary/5' : 'border-border hover:border-primary/30']}>
                <h3 class="font-bold text-lg mb-2">{tier.h3}</h3>
                <p class="text-2xl font-bold text-primary mb-3">{tier.price}</p>
                <ul class="text-sm text-muted-foreground space-y-2">
                  {tier.features?.map((f: any) => (
                    <li class="flex items-start gap-2">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
                      <span>{f}</span>
                    </li>
                  ))}
                </ul>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <SectionDivider />

  <!-- Pricing Factors -->
  {factors && (
    <section id="pricing-factors" class="py-12 md:py-16 bg-muted/30">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{factors.h2}</h2>
          <div class="grid md:grid-cols-2 gap-6">
            {factors.items?.map((item: any) => (
              <div class="bg-card p-6 rounded-2xl border border-border hover:border-primary/30 transition-colors">
                <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                  <span class="w-2 h-5 bg-primary rounded-full flex-shrink-0"></span>
                  {item.h3}
                </h3>
                <p class="text-muted-foreground text-sm leading-relaxed" style="text-wrap: pretty;">{item.content}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <SectionDivider />

  <!-- What's Included -->
  {included && (
    <section id="whats-included" class="py-12 md:py-16">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-bold mb-8 text-center">{included.h2}</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-card p-6 rounded-2xl border border-border">
              <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="m7.5 4.27 9 5.15"/><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/><path d="m3.3 7 8.7 5 8.7-5"/><path d="M12 22V12"/></svg>
                חומרים
              </h3>
              <ul class="space-y-2 text-muted-foreground">
                {included.materials?.map((item: any) => (
                  <li class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-card p-6 rounded-2xl border border-border">
              <h3 class="font-bold text-lg mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76Z"/></svg>
                שירות
              </h3>
              <ul class="space-y-2 text-muted-foreground">
                {included.service?.map((item: any) => (
                  <li class="flex items-start gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  )}

  <SectionDivider />

  <!-- Warning Section -->
  {warning && (
    <section class="py-12 md:py-16 bg-destructive/5">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl md:text-3xl font-bold mb-6 text-center text-destructive">{warning.h2}</h2>
          <p class="text-lg text-muted-foreground text-center mb-8" style="text-wrap: pretty;">{warning.content}</p>
          <div class="bg-card p-6 rounded-2xl border border-destructive/20 mb-6">
            <ul class="space-y-3">
              {warning.failures?.map((failure: any) => (
                <li class="flex items-start gap-3 text-muted-foreground">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-destructive mt-0.5 flex-shrink-0"><circle cx="12" cy="12" r="10"/><path d="m15 9-6 6"/><path d="m9 9 6 6"/></svg>
                  <span>{failure}</span>
                </li>
              ))}
            </ul>
          </div>
          <p class="text-center text-foreground font-bold text-lg">{warning.conclusion}</p>
        </div>
      </div>
    </section>
  )}

  <!-- CTA -->
  {cta && (
    <section class="py-16 md:py-20">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center bg-card p-8 md:p-12 rounded-2xl border-2 border-primary/30">
          <h2 class="text-2xl md:text-4xl font-black mb-6 text-foreground">{cta.h2}</h2>
          <p class="text-lg text-muted-foreground mb-8" style="text-wrap: pretty;">{cta.content}</p>
          <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-2 px-8 py-4 rounded-xl text-lg font-bold">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <span>התקשר - {PHONE_DISPLAY}</span>
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Internal Links -->
  <section class="py-12">
    <div class="container">
      <div class="max-w-4xl mx-auto p-6 bg-card/50 border border-border rounded-xl">
        <h3 class="text-lg font-bold mb-4">קישורים נוספים:</h3>
        <div class="flex flex-wrap gap-4">
          {page.internalLinks.map((link: any) => (
            <a href={link.href} class="text-primary hover:underline">{link.label}</a>
          ))}
        </div>
      </div>
    </div>
  </section>
</ServicePageLayout>