---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import Footer from '@/components/Footer.astro';
import FloatingWhatsApp from '@/components/FloatingWhatsApp.astro';

const PHONE_LINK = "tel:+972508585310";

const seoData = {
  title: "מכשור מדידה למתח גבוה | בודקי גדר חשמלית | מד מתח | גייטקיפ",
  description: "מכשירי בדיקה ומדידה מקצועיים לגדרות חשמליות. מדי מתח, בודקי קו, מכשירי אבחון. תחזוקה מקצועית של הגדר. ☎ 050-858-5310",
  keywords: "מד מתח לגדר חשמלית, בודק גדר חשמלית, מכשיר מדידה למתח גבוה, Fault Finder, בדיקת מתח גדר, תחזוקת גדר חשמלית",
  canonicalUrl: "https://gatekeepisrael.com/products/testing-equipment"
};

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "מכשור בדיקה ומדידה לגדרות חשמליות",
  "description": "מכשירי בדיקה ומדידה מקצועיים לגדרות חשמליות. מדי מתח, בודקי קו, מכשירי אבחון.",
  "brand": {
    "@type": "Brand",
    "name": "גייטקיפ"
  }
};
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonical={seoData.canonicalUrl}
>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} slot="head" />

  <Header />
  <div class="container">
    <Breadcrumbs
      items={[
        { label: "מוצרים", href: "/pricing" },
        { label: "מכשור מדידה" }
      ]}
      currentPath={Astro.url.pathname}
    />
  </div>

  <main>
    {/* Hero Section */}
    <section class="pt-32 pb-16 bg-gradient-to-b from-secondary/30 to-background">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-primary/15 border border-primary/30 text-primary px-5 py-2.5 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
            <span class="font-bold">כלי מדידה מקצועיים</span>
          </div>
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-foreground leading-tight mb-6" style="text-wrap: balance;">
            מכשור בדיקה ומדידה{" "}
            <span class="text-primary">לגדרות חשמליות</span>
          </h1>
          <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto" style="text-wrap: pretty;">
            אבחון מדויק, תחזוקה יעילה - וודאו שהגדר שלכם עובדת במתח מלא
          </p>
        </div>
      </div>
    </section>

    {/* Main Benefits */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            למה <span class="text-primary">חשוב לבדוק?</span>
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M12 20V10"/><path d="M18 20V4"/><path d="M6 20v-4"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">מתח אופטימלי</h3>
              <p class="text-muted-foreground">וודאו שהגדר מספקת מתח מספיק להרתעה אפקטיבית של בעלי החיים.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">איתור תקלות</h3>
              <p class="text-muted-foreground">זהו במהירות נקודות קצר, חוטים פגומים ובעיות בבידוד.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M22 12h-4l-3 9L9 3l-3 9H2"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">תחזוקה מונעת</h3>
              <p class="text-muted-foreground">גלו בעיות לפני שהן הופכות לנזק גדול או כשל מערכתי.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Product Options */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            <span class="text-primary">מכשירי הבדיקה</span> שלנו
          </h2>

          <div class="grid md:grid-cols-2 gap-8 mb-12">
            {/* Digital Voltage Tester */}
            <div class="bg-card border-2 border-primary rounded-2xl p-8 relative">
              <div class="absolute top-0 left-0 bg-primary text-primary-foreground px-4 py-1 text-sm font-bold rounded-br-lg">
                מומלץ
              </div>
              <div class="mt-4 mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">מד מתח דיגיטלי</h3>
                <p class="text-muted-foreground">מדידה מדויקת של מתח הגדר בכל נקודה</p>
              </div>
              <div class="space-y-3 mb-6">
                {["תצוגה דיגיטלית גדולה וברורה", "טווח מדידה: 0-10,000V", "אינדיקציה ויזואלית (LED)", "צליל התראה למתח נמוך", "חיסכון באנרגיה - כיבוי אוטומטי", "עמיד למים ולאבק (IP54)"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">450-650 ₪</div>
              <p class="text-xs text-muted-foreground">כולל סוללות ונרתיק</p>
            </div>

            {/* Fault Finder */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mt-4 mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">Fault Finder</h3>
                <p class="text-muted-foreground">מכשיר מתקדם לאיתור קצרים ותקלות</p>
              </div>
              <div class="space-y-3 mb-6">
                {["איתור קצרים לאורך הקו", "זיהוי צמחיה גבוהה/גדר נמוכה", "מפה חזותית של הבעיה", "חיווי קולי מתקרב למקור", 'מתאים לקווים עד 20 ק"מ', "אידיאלי לשטחים גדולים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">1,200-1,800 ₪</div>
              <p class="text-xs text-muted-foreground">מכשיר מקצועי לחקלאים</p>
            </div>

            {/* Simple LED Tester */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">בודק LED פשוט</h3>
                <p class="text-muted-foreground">בדיקה מהירה ובסיסית</p>
              </div>
              <div class="space-y-3 mb-6">
                {["5 נוריות LED לעוצמת מתח", "ללא סוללות - מופעל מהגדר", "קל משקל וקומפקטי", "עמיד במיוחד לשטח", "אידיאלי לבדיקות יומיות", "מחיר אטרקטיבי"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">120-200 ₪</div>
              <p class="text-xs text-muted-foreground">פשוט וזול</p>
            </div>

            {/* Multimeter Pro */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">מולטימטר מקצועי</h3>
                <p class="text-muted-foreground">מדידת מתח, זרם והתנגדות</p>
              </div>
              <div class="space-y-3 mb-6">
                {["מדידת מתח עד 15,000V", "מדידת זרם דליפה", "בדיקת התנגדות קו", "זיכרון למדידות קודמות", "חיבור Bluetooth לסמארטפון", "תוכנה לניתוח נתונים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">2,200-3,000 ₪</div>
              <p class="text-xs text-muted-foreground">רמה מקצועית ביותר</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Usage Guide */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            איך <span class="text-primary">משתמשים?</span>
          </h2>
          <div class="bg-card border border-border rounded-2xl p-8">
            <div class="space-y-6">
              {[
                { num: "1", title: "הכנה", desc: "הפעילו את המכשיר וודאו שהסוללה טעונה. התקרבו לגדר בזהירות." },
                { num: "2", title: "חיבור", desc: "חברו את החיישן לחוט הגדר. הקרקע צריכה להיות במגע עם האדמה." },
                { num: "3", title: "קריאה", desc: "קראו את ערך המתח בתצוגה. מתח תקין: 4,000-10,000 וולט." },
                { num: "4", title: "אבחון", desc: "מתח נמוך? בדקו קצרים, צמחייה, חיבורים רופפים ומצב הסוללה/מחולל." }
              ].map((step) => (
                <div class="flex gap-4">
                  <div class="w-10 h-10 rounded-full bg-primary text-primary-foreground flex items-center justify-center font-bold flex-shrink-0">
                    {step.num}
                  </div>
                  <div>
                    <h3 class="font-bold text-foreground mb-2">{step.title}</h3>
                    <p class="text-muted-foreground">{step.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-black text-foreground mb-6">
            צריכים <span class="text-primary">מכשיר בדיקה?</span>
          </h2>
          <p class="text-lg text-muted-foreground mb-8">
            נעזור לכם לבחור את הציוד המתאים לצרכי התחזוקה שלכם
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={PHONE_LINK}
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>התקשר לייעוץ - 050-858-5310</span>
            </a>
            <a
              href="/pricing"
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
            >
              <span>לכל המוצרים</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Related Links */}
    <section class="py-12 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="bg-card/50 border border-border rounded-xl p-6">
            <h3 class="font-bold text-foreground mb-3">מוצרים קשורים</h3>
            <div class="flex flex-wrap gap-3">
              <a href="/products/solar-energizers" class="text-primary font-semibold hover:underline">
                מחוללי מתח סולאריים
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/products/insulators" class="text-primary font-semibold hover:underline">
                מבודדים ורכיבי גידור
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/maintenance" class="text-primary font-semibold hover:underline">
                שירותי תחזוקה
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>
