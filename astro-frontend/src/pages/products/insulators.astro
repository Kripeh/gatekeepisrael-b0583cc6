---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import Footer from '@/components/Footer.astro';
import FloatingWhatsApp from '@/components/FloatingWhatsApp.astro';

const PHONE_LINK = "tel:+972508585310";

const seoData = {
  title: "מבודדים ורכיבי גידור לגדר חשמלית | אביזרים מקצועיים | גייטקיפ",
  description: "מבודדים, מתלים, שערים ואביזרי גידור מקצועיים לגדרות חשמליות. איכות גבוהה, עמידות לאורך זמן. התקנה מקצועית בכל הארץ. ☎ 050-858-5310",
  keywords: "מבודדים לגדר חשמלית, רכיבי גידור חשמלי, מתלים לגדר, שער לגדר חשמלית, אביזרי גדר חשמלית, מבודדים פלסטיק, מבודדים קרמיים",
  canonicalUrl: "https://gatekeepisrael.com/products/insulators"
};

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "מבודדים ורכיבי גידור לגדר חשמלית",
  "description": "מבודדים, מתלים, שערים ואביזרי גידור מקצועיים לגדרות חשמליות",
  "brand": {
    "@type": "Brand",
    "name": "גייטקיפ"
  }
};
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonical={seoData.canonicalUrl}
>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} slot="head" />

  <Header />
  <div class="container">
    <Breadcrumbs
      items={[
        { label: "מוצרים", href: "/pricing" },
        { label: "מבודדים ורכיבי גידור" }
      ]}
      currentPath={Astro.url.pathname}
    />
  </div>

  <main>
    {/* Hero Section */}
    <section class="pt-32 pb-16 bg-gradient-to-b from-secondary/30 to-background">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-primary/15 border border-primary/30 text-primary px-5 py-2.5 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>
            <span class="font-bold">אביזרים מקצועיים</span>
          </div>
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-foreground leading-tight mb-6" style="text-wrap: balance;">
            מבודדים ורכיבי גידור{" "}
            <span class="text-primary">לגדר חשמלית</span>
          </h1>
          <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto" style="text-wrap: pretty;">
            מגוון מלא של אביזרים איכותיים לבניית והרחבת גדרות חשמליות מקצועיות
          </p>
        </div>
      </div>
    </section>

    {/* Main Benefits */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            למה <span class="text-primary">רכיבים איכותיים?</span>
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">עמידות מקסימלית</h3>
              <p class="text-muted-foreground">חומרים איכותיים עמידים בפני UV, קרינה ותנאי מזג אוויר קשים.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">בידוד מושלם</h3>
              <p class="text-muted-foreground">מניעת דליפות מתח והבטחת ביצועי הגדר לאורך זמן.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">התקנה קלה</h3>
              <p class="text-muted-foreground">עיצוב ארגונומי להתקנה מהירה ופשוטה בכל סוג שטח.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Product Categories */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            <span class="text-primary">מוצרים</span> זמינים
          </h2>

          <div class="grid md:grid-cols-2 gap-8 mb-12">
            {/* Insulators */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">מבודדים</h3>
                <p class="text-muted-foreground">מגוון מבודדים לכל סוגי הגידור</p>
              </div>
              <div class="space-y-3 mb-6">
                {["מבודדי פלסטיק מחוזק UV", "מבודדי קרמיקה למתח גבוה", "מבודדי פינה וקצה", "מבודדים לעמודי עץ ומתכת", "מבודדים לחוטי רב-גידים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-2xl font-black text-primary mb-2">החל מ-1.5 ₪/יחידה</div>
              <p class="text-xs text-muted-foreground">מחיר משתנה לפי כמות וסוג</p>
            </div>

            {/* Gates & Handles */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">שערים וידיות</h3>
                <p class="text-muted-foreground">פתרונות מעבר בטוחים וידידותיים</p>
              </div>
              <div class="space-y-3 mb-6">
                {["ידית שער מבודדת סטנדרט", "ידית שער קפיצית Premium", "ערכת שער מלאה כולל קפיצים", "שער אוניברסלי לכל סוגי הגדרות", "מתלים ומחברים מבודדים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-2xl font-black text-primary mb-2">150-450 ₪/יחידה</div>
              <p class="text-xs text-muted-foreground">לפי סוג ומפרט</p>
            </div>

            {/* Wire & Connections */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">חוטים וחיבורים</h3>
                <p class="text-muted-foreground">חומרי גלם איכותיים להולכת מתח</p>
              </div>
              <div class="space-y-3 mb-6">
                {["חוט פוליווייר (Polywire) 250m", "חוט רב-גידים מגולוון", 'סרט גידור רוחב 20/40 מ"מ', "מחברי חוטים וקליפסים", "שומרי מתח ומתחים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-2xl font-black text-primary mb-2">250-850 ₪/גליל</div>
              <p class="text-xs text-muted-foreground">מחיר לפי סוג ואורך</p>
            </div>

            {/* Posts & Anchors */}
            <div class="bg-card border-2 border-primary rounded-2xl p-8 relative">
              <div class="absolute top-0 left-0 bg-primary text-primary-foreground px-4 py-1 text-sm font-bold rounded-br-lg">
                פופולרי
              </div>
              <div class="mt-4 mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">עמודים ועיגונים</h3>
                <p class="text-muted-foreground">בסיס איתן לגדר יציבה</p>
              </div>
              <div class="space-y-3 mb-6">
                {['עמודי פיברגלס 120-180 ס"מ', "עמודי מתכת מגולוונים", "יתדות הארקה מקצועיות", "מערכות עיגון ומתיחה", "בסיסים ומייצבים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M12 22c5.523 0 10-4.477 10-10S17.523 2 12 2 2 6.477 2 12s4.477 10 10 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-2xl font-black text-primary mb-2">35-180 ₪/יחידה</div>
              <p class="text-xs text-muted-foreground">מחיר לפי סוג וגובה</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Technical Details */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            מפרט <span class="text-primary">טכני</span>
          </h2>
          <div class="bg-card border border-border rounded-2xl p-8">
            <div class="space-y-4">
              {[
                { label: "חומרי גלם", value: "פלסטיק מחוזק UV, קרמיקה, מתכת מגולוונת" },
                { label: "עמידות למתח", value: "עד 20,000 וולט" },
                { label: "טווח טמפרטורות", value: "-30°C עד +70°C" },
                { label: "עמידות UV", value: "מוגן מפני קרינה - לא מתפרק בשמש" },
                { label: "עמידות מכנית", value: "מתאים לתנאי שטח קשים" },
                { label: "תקינה", value: "עומד בתקני איכות בינלאומיים" },
                { label: "אחריות", value: "שנתיים על פגמי ייצור" }
              ].map((spec) => (
                <div class="flex justify-between items-center border-b border-border pb-3">
                  <span class="font-bold text-foreground">{spec.label}</span>
                  <span class="text-muted-foreground text-left max-w-xs">{spec.value}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-black text-foreground mb-6">
            צריכים <span class="text-primary">אביזרים לגדר?</span>
          </h2>
          <p class="text-lg text-muted-foreground mb-8">
            נייעץ לכם בבחירת הרכיבים המתאימים בדיוק לצרכים שלכם
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={PHONE_LINK}
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>התקשר לייעוץ - 050-858-5310</span>
            </a>
            <a
              href="/pricing"
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
            >
              <span>לכל המוצרים</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Related Links */}
    <section class="py-12 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="bg-card/50 border border-border rounded-xl p-6">
            <h3 class="font-bold text-foreground mb-3">מוצרים קשורים</h3>
            <div class="flex flex-wrap gap-3">
              <a href="/products/solar-energizers" class="text-primary font-semibold hover:underline">
                מחוללי מתח סולאריים
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/products/testing-equipment" class="text-primary font-semibold hover:underline">
                מכשור מדידה למתח גבוה
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/pricing" class="text-primary font-semibold hover:underline">
                כל המוצרים והמחירים
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>
