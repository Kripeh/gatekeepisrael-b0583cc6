---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import FloatingWhatsApp from '@/components/FloatingWhatsApp.astro';

const PHONE_LINK = "tel:+972508585310";

const seoData = {
  title: "מבודדים ורכיבי גידור - מגיע בקרוב | גייטכיפ",
  description: "דף מוצר מבודדים ורכיבי גידור בהכנה. בינתיים, התקשרו אלינו לפרטים נוספים ☎ 050-858-5310",
  keywords: "מבודדים לגדר חשמלית, רכיבי גידור, מבודדי פיברגלס",
  canonicalUrl: "https://gatekeepisrael.com/products/insulators"
};
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonical={seoData.canonicalUrl}
>
  <Header currentPath={Astro.url.pathname} />

  <main class="min-h-screen flex items-center justify-center py-20">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center">
        <!-- Coming Soon Icon -->
        <div class="w-24 h-24 mx-auto mb-8 rounded-full bg-primary/10 border-2 border-primary/20 flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
            <path d="M12 2v20"/>
            <path d="M8 10L12 2l4 8"/>
            <circle cx="12" cy="17" r="1"/>
          </svg>
        </div>

        <!-- Title -->
        <h1 class="text-4xl md:text-5xl font-black text-foreground mb-4">
          מבודדים ורכיבי גידור
        </h1>

        <!-- Coming Soon Badge -->
        <div class="inline-flex items-center gap-2 bg-primary/15 border border-primary/30 text-primary px-6 py-3 rounded-full mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          <span class="font-bold">מגיע בקרוב!</span>
        </div>

        <!-- Description -->
        <p class="text-lg md:text-xl text-muted-foreground mb-8">
          אנחנו עובדים על דף מוצר מפורט עבור מבודדים ורכיבי הגידור שלנו.<br/>
          בינתיים, ניתן ליצור קשר לפרטים נוספים ולהצעת מחיר.
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={PHONE_LINK}
            class="inline-flex items-center gap-3 px-8 py-4 rounded-xl text-lg font-bold bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>התקשר לפרטים - 050-858-5310</span>
          </a>
          <a
            href="/installation"
            class="inline-flex items-center gap-3 px-8 py-4 rounded-xl text-lg font-bold border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
          >
            <span>למידע על התקנה</span>
          </a>
        </div>

        <!-- Back Link -->
        <div class="mt-12">
          <a href="/" class="text-primary font-semibold hover:underline">
            ← חזרה לדף הבית
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>
