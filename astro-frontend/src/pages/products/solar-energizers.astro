---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/Header.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import Footer from '@/components/Footer.astro';
import FloatingWhatsApp from '@/components/FloatingWhatsApp.astro';

const PHONE_LINK = "tel:+972508585310";

const seoData = {
  title: "מחוללי מתח סולאריים לגדר חשמלית | אנרגיה ירוקה | גייטקיפ",
  description: "מחוללי מתח סולאריים מקצועיים לגדרות חשמליות. אפס חשבונות חשמל, אמינות מקסימלית. התקנה מקצועית בכל הארץ. ☎ 050-858-5310",
  keywords: "מחולל מתח סולארי, גדר חשמלית סולארית, מחולל חשמלי לגדר, אנרגיה סולארית לחקלאות, מחולל 12 וולט, גדר חשמלית ללא חשמל",
  canonicalUrl: "https://gatekeepisrael.com/products/solar-energizers"
};

const productSchema = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "מחולל מתח סולארי לגדר חשמלית",
  "description": "מחוללי מתח סולאריים מקצועיים לגדרות חשמליות. אפס חשבונות חשמל, אמינות מקסימלית.",
  "brand": {
    "@type": "Brand",
    "name": "גייטקיפ"
  },
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "ILS",
    "lowPrice": "2500",
    "highPrice": "4500",
    "availability": "https://schema.org/InStock"
  }
};
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonical={seoData.canonicalUrl}
>
  <script type="application/ld+json" set:html={JSON.stringify(productSchema)} slot="head" />

  <Header currentPath={Astro.url.pathname} />
  <div class="container">
    <Breadcrumbs
      items={[
        { label: "מוצרים", href: "/pricing" },
        { label: "מחוללי מתח סולאריים" }
      ]}
      currentPath={Astro.url.pathname}
    />
  </div>

  <main>
    {/* Hero Section */}
    <section class="pt-32 pb-16 bg-gradient-to-b from-secondary/30 to-background">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <div class="inline-flex items-center gap-2 bg-primary/15 border border-primary/30 text-primary px-5 py-2.5 rounded-full mb-6">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
            <span class="font-bold">אנרגיה ירוקה וחסכונית</span>
          </div>
          <h1 class="text-4xl sm:text-5xl md:text-6xl font-black text-foreground leading-tight mb-6" style="text-wrap: balance;">
            מחוללי מתח סולאריים{" "}
            <span class="text-primary">לגדרות חשמליות</span>
          </h1>
          <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto" style="text-wrap: pretty;">
            פתרון מתקדם ללא חיבור לחשמל - מתח גבוה מובטח גם באזורים מרוחקים
          </p>
        </div>
      </div>
    </section>

    {/* Main Benefits */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            למה <span class="text-primary">מערכת סולארית?</span>
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><circle cx="12" cy="12" r="4"/><path d="M12 2v2"/><path d="M12 20v2"/><path d="m4.93 4.93 1.41 1.41"/><path d="m17.66 17.66 1.41 1.41"/><path d="M2 12h2"/><path d="M20 12h2"/><path d="m6.34 17.66-1.41 1.41"/><path d="m19.07 4.93-1.41 1.41"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">אפס עלויות חשמל</h3>
              <p class="text-muted-foreground">אנרגיה חינם מהשמש. אין חיבור לרשת, אין חשבונות.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M13 2 3 14h9l-1 8 10-12h-9l1-8z"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">אמינות מקסימלית</h3>
              <p class="text-muted-foreground">עובד 24/7 גם בימים מעוננים. סוללה גיבוי לעד 21 ימים.</p>
            </div>

            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><rect width="16" height="10" x="2" y="7" rx="2" ry="2"/><line x1="22" x2="22" y1="11" y2="11"/></svg>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-3">גמישות בהתקנה</h3>
              <p class="text-muted-foreground">מושלם לאזורים מרוחקים ללא תשתית חשמל.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Product Options */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            <span class="text-primary">מחוללי המתח</span> שלנו
          </h2>

          <div class="grid md:grid-cols-2 gap-8 mb-12">
            {/* Product 1 */}
            <div class="bg-card border-2 border-primary rounded-2xl p-8 relative">
              <div class="absolute top-0 left-0 bg-primary text-primary-foreground px-4 py-1 text-sm font-bold rounded-br-lg">
                מומלץ
              </div>
              <div class="mt-4 mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">מחולל 10 ג'ול</h3>
                <p class="text-muted-foreground">מושלם למשקים בינוניים (עד 8 דונם)</p>
              </div>
              <div class="space-y-3 mb-6">
                {["פאנל סולארי 20W", "סוללה 12V 7Ah", "מתח יציאה: 10,000V", 'טווח: עד 10 ק"מ חוטים', "גיבוי סוללה: 14 ימים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M20 6 9 17l-5-5"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">2,500-3,200 ₪</div>
              <p class="text-xs text-muted-foreground">כולל התקנה מקצועית</p>
            </div>

            {/* Product 2 */}
            <div class="bg-card border border-border rounded-2xl p-8">
              <div class="mt-4 mb-6">
                <h3 class="text-2xl font-bold text-foreground mb-2">מחולל 15 ג'ול</h3>
                <p class="text-muted-foreground">לשטחים גדולים ותנאים מאתגרים</p>
              </div>
              <div class="space-y-3 mb-6">
                {["פאנל סולארי 30W", "סוללה 12V 12Ah", "מתח יציאה: 15,000V", 'טווח: עד 20 ק"מ חוטים', "גיבוי סוללה: 21 ימים"].map((feature) => (
                  <div class="flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0"><path d="M20 6 9 17l-5-5"/></svg>
                    <span class="text-sm">{feature}</span>
                  </div>
                ))}
              </div>
              <div class="text-3xl font-black text-primary mb-2">3,800-4,500 ₪</div>
              <p class="text-xs text-muted-foreground">כולל התקנה מקצועית</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Technical Details */}
    <section class="py-20 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-black text-foreground text-center mb-12">
            מפרט <span class="text-primary">טכני</span>
          </h2>
          <div class="bg-card border border-border rounded-2xl p-8">
            <div class="space-y-4">
              {[
                { label: "טכנולוגיה", value: "PWM - Pulse Width Modulation" },
                { label: "תדירות פולס", value: "1 פולס לשנייה" },
                { label: "זמן פולס", value: "0.3 אלפית שנייה" },
                { label: "צריכת אנרגיה", value: "פחות מ-250mA" },
                { label: "עמידות", value: "IP65 - עמיד למים וחול" },
                { label: "טמפרטורת עבודה", value: "-20°C עד +50°C" },
                { label: "אחריות", value: "3 שנים מלאות" }
              ].map((spec) => (
                <div class="flex justify-between items-center border-b border-border pb-3">
                  <span class="font-bold text-foreground">{spec.label}</span>
                  <span class="text-muted-foreground">{spec.value}</span>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* CTA Section */}
    <section class="py-20 bg-secondary/30">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center">
          <h2 class="text-3xl md:text-4xl font-black text-foreground mb-6">
            מוכנים לעבור <span class="text-primary">לסולארי?</span>
          </h2>
          <p class="text-lg text-muted-foreground mb-8">
            נעזור לכם לבחור את המחולל המתאים לשטח שלכם
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={PHONE_LINK}
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
            >
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>התקשר לייעוץ - 050-858-5310</span>
            </a>
            <a
              href="/pricing"
              class="inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-colors"
            >
              <span>לכל המוצרים</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    {/* Related Links */}
    <section class="py-12 bg-background">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="bg-card/50 border border-border rounded-xl p-6">
            <h3 class="font-bold text-foreground mb-3">מוצרים קשורים</h3>
            <div class="flex flex-wrap gap-3">
              <a href="/products/insulators" class="text-primary font-semibold hover:underline">
                מבודדים ורכיבי גידור
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/products/testing-equipment" class="text-primary font-semibold hover:underline">
                מכשור מדידה למתח גבוה
              </a>
              <span class="text-muted-foreground">•</span>
              <a href="/solar-fence" class="text-primary font-semibold hover:underline">
                גדר סולארית מלאה
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
  <FloatingWhatsApp />
</BaseLayout>
