---
import BaseLayout from '../layouts/BaseLayout.astro';
import indexData from '../../../public/api/pages/index.json';

const page = indexData;
const PHONE_LINK = 'tel:+972508585310';
const HERO_BG_URL = 'https://sqxmgqqtcgkjztpvhzzr.supabase.co/storage/v1/object/public/images/heroImageNew';
---
<BaseLayout
  title={page.seo.title}
  description={page.seo.description}
  keywords={page.seo.keywords}
  canonical={page.seo.canonical}
  structuredData={page.structuredData}
>
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center pt-24 pb-16 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src={HERO_BG_URL} 
          alt="גדר חשמלית נגד חזירי בר - התקנה מקצועית בשטח חקלאי | גייטקיפ" 
          class="w-full h-[120%] object-cover" 
          loading="eager" 
          fetchpriority="high" 
        />
        <div class="absolute inset-0 bg-background/60"></div>
      </div>
      <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-foreground leading-tight mb-6" style="text-wrap: balance;">
            <span class="text-primary">חזירי בר</span>{' '}מחסלים לך את החלקה?<br/>
            <span class="text-primary">אנחנו עוצרים אותם היום!</span>
          </h1>
          <p class="text-lg sm:text-xl md:text-2xl text-muted-foreground max-w-3xl mx-auto mb-10 leading-relaxed" style="text-wrap: pretty;">
            אל תחכה לפשיטה של הלילה.{' '}
            <strong class="text-foreground">גדר חשמלית מקצועית</strong> היא הפתרון היחיד שעובד.{' '}
            <span class="text-primary font-semibold">גדר חשמלית איכותית ומקצועית</span> – הכל על פי תקן.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-3 px-8 py-5 md:px-12 md:py-6 rounded-xl text-xl md:text-2xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 animate-bounce-subtle"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>התקשר עכשיו</span>
            </a>
            <a href="#calculator" class="inline-flex items-center gap-3 px-6 py-4 md:px-8 md:py-5 rounded-xl text-lg md:text-xl font-bold border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="20" x="4" y="2" rx="2"/><line x1="8" x2="16" y1="6" y2="6"/><line x1="16" x2="16" y1="14" y2="18"/><path d="M16 10h.01"/><path d="M12 10h.01"/><path d="M8 10h.01"/><path d="M12 14h.01"/><path d="M8 14h.01"/><path d="M12 18h.01"/><path d="M8 18h.01"/></svg>
              <span>חשב הצעת מחיר</span>
            </a>
          </div>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
    </section>

    <!-- Price Calculator Section -->
    <section id="calculator" class="py-16 md:py-24 bg-card/50">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-10">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">{page.sections[1].h2}</h2>
          <p class="text-muted-foreground text-lg">{page.sections[1].subtitle}</p>
          <p class="text-sm text-muted-foreground mt-2">{page.sections[1].note}</p>
        </div>
        <!-- Calculator will be a React island -->
        <div id="price-calculator-root" class="max-w-2xl mx-auto">
          <div class="bg-card p-8 rounded-2xl border border-border text-center">
            <p class="text-muted-foreground">מחשבון מחירים אינטראקטיבי</p>
            <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-2 px-8 py-4 rounded-xl text-lg font-bold mt-4">
              <span>התקשר לקבלת הצעת מחיר</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Reasons -->
    {page.sections.find(s => s.type === 'trust') && (() => {
      const trust = page.sections.find(s => s.type === 'trust')!;
      return (
        <section id="trust" class="py-16 md:py-24">
          <div class="container">
            <div class="max-w-4xl mx-auto text-center mb-12">
              <h2 class="text-3xl md:text-4xl font-bold mb-4">{trust.h2}</h2>
              <p class="text-muted-foreground text-lg">{trust.subtitle}</p>
            </div>
            <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
              {trust.items.map((item) => (
                <div class="bg-card p-8 rounded-2xl border border-border text-center">
                  <h3 class="text-xl font-bold mb-3">{item.title}</h3>
                  <p class="text-muted-foreground">{item.description}</p>
                </div>
              ))}
            </div>
            {trust.internalLinks && (
              <div class="max-w-4xl mx-auto mt-8">
                <h3 class="text-lg font-bold mb-4">קישורים נוספים:</h3>
                <div class="flex flex-wrap gap-4">
                  {trust.internalLinks.map((link) => (
                    <a href={link.href} class="text-primary hover:underline">{link.label}</a>
                  ))}
                </div>
              </div>
            )}
          </div>
        </section>
      );
    })()}

    <!-- FAQ Section -->
    {page.sections.find(s => s.type === 'faq') && (() => {
      const faq = page.sections.find(s => s.type === 'faq')!;
      return (
        <section id="faq" class="py-16 md:py-24 bg-card/30">
          <div class="container">
            <div class="max-w-4xl mx-auto">
              <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">{faq.h2}</h2>
                <p class="text-muted-foreground text-lg">{faq.subtitle}</p>
              </div>
              <div class="space-y-4">
                {faq.items.map((item) => (
                  <details class="bg-card rounded-2xl border border-border p-6 group">
                    <summary class="text-lg font-bold cursor-pointer list-none flex items-center justify-between">
                      <span>{item.question}</span>
                      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-open:rotate-180 flex-shrink-0 mr-2"><path d="m6 9 6 6 6-6"/></svg>
                    </summary>
                    <p class="text-muted-foreground mt-4 leading-relaxed">{item.answer}</p>
                  </details>
                ))}
              </div>
              {faq.internalLinks && (
                <div class="mt-8">
                  <h3 class="text-lg font-bold mb-4">קישורים נוספים:</h3>
                  <div class="flex flex-wrap gap-4">
                    {faq.internalLinks.map((link) => (
                      <a href={link.href} class="text-primary hover:underline">{link.label}</a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </section>
      );
    })()}

    <!-- About Section -->
    {page.sections.find(s => s.type === 'about') && (() => {
      const about = page.sections.find(s => s.type === 'about')!;
      return (
        <section id="about" class="py-16 md:py-24">
          <div class="container">
            <div class="max-w-4xl mx-auto">
              <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">{about.h2}</h2>
                <p class="text-muted-foreground text-lg">{about.subtitle}</p>
              </div>
              <div class="space-y-4 mb-12">
                {about.story.map((paragraph) => (
                  <p class="text-muted-foreground leading-relaxed text-lg">{paragraph}</p>
                ))}
              </div>
              <div class="grid md:grid-cols-3 gap-6 mb-12">
                {about.values.map((value) => (
                  <div class="bg-card p-6 rounded-2xl border border-border text-center">
                    <h3 class="text-lg font-bold mb-2">{value.title}</h3>
                    <p class="text-muted-foreground text-sm">{value.description}</p>
                  </div>
                ))}
              </div>
              <h3 class="text-2xl font-bold mb-6 text-center">הצוות שלנו</h3>
              <div class="grid md:grid-cols-2 gap-6 mb-8">
                {about.team.map((member) => (
                  <div class="bg-card p-6 rounded-2xl border border-border">
                    <h4 class="text-lg font-bold mb-1">{member.name}</h4>
                    <p class="text-primary text-sm font-medium mb-2">{member.role}</p>
                    <p class="text-muted-foreground text-sm">{member.description}</p>
                  </div>
                ))}
              </div>
              {about.internalLinks && (
                <div class="mt-8">
                  <h3 class="text-lg font-bold mb-4">קישורים נוספים:</h3>
                  <div class="flex flex-wrap gap-4">
                    {about.internalLinks.map((link) => (
                      <a href={link.href} class="text-primary hover:underline">{link.label}</a>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </section>
      );
    })()}

    <!-- Urgency Banner -->
    {page.sections.find(s => s.type === 'urgency') && (() => {
      const urgency = page.sections.find(s => s.type === 'urgency')!;
      return (
        <section id="urgency" class="py-16 md:py-20 bg-primary text-primary-foreground">
          <div class="container">
            <div class="max-w-3xl mx-auto text-center">
              <h2 class="text-2xl md:text-4xl font-black mb-6">{urgency.h2}</h2>
              <p class="text-lg opacity-90 mb-8">{urgency.content}</p>
              <a href={urgency.cta.href} class="inline-flex items-center gap-2 bg-white text-primary px-8 py-4 rounded-xl text-lg font-bold hover:bg-white/90 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
                <span>{urgency.cta.label}</span>
              </a>
            </div>
          </div>
        </section>
      );
    })()}
  </main>
</BaseLayout>
