---
import BaseLayout from '../layouts/BaseLayout.astro';
import PriceEstimatorIsland from '../components/react/PriceEstimatorIsland';
import TestimonialsIsland from '../components/react/TestimonialsIsland';
import indexData from '../../../public/api/pages/index.json';

const page = indexData;
const PHONE_LINK = 'tel:+972508585310';
const HERO_BG_URL = 'https://sqxmgqqtcgkjztpvhzzr.supabase.co/storage/v1/object/public/images/heroImageNew';
const STORAGE_BASE = 'https://sqxmgqqtcgkjztpvhzzr.supabase.co/storage/v1/object/public/images';

const trust = page.sections.find((s: any) => s.type === 'trust') as any;
const faq = page.sections.find((s: any) => s.type === 'faq') as any;
const about = page.sections.find((s: any) => s.type === 'about') as any;
const urgency = page.sections.find((s: any) => s.type === 'urgency') as any;

const galleryImages = [
  { src: `${STORAGE_BASE}/projects/PHOTO-2026-01-22-13-54-27.jpg`, alt: 'התקנת גדר חשמלית נגד חזירי בר בשטח חקלאי' },
  { src: `${STORAGE_BASE}/projects/197543FE-1C3D-4552-81CB-D561C3EB79CA.JPG`, alt: 'צוות גייטקיפ מתקין גדר חשמלית לחקלאות' },
  { src: `${STORAGE_BASE}/projects/PHOTO-2026-01-22-12-43-50.jpg`, alt: 'צוות מקצועי להתקנת גדרות חשמליות' },
  { src: `${STORAGE_BASE}/projects/IMG_7536.jpg`, alt: 'מערכת גדר חשמלית מותקנת' },
  { src: `${STORAGE_BASE}/projects/IMG_7540.jpg`, alt: 'גדר חשמלית מקצועית למיגון שטחים חקלאיים' },
  { src: `${STORAGE_BASE}/projects/IMG_8123.jpg`, alt: 'התקנת גדר חשמלית בכרם' },
  { src: `${STORAGE_BASE}/projects/IMG_7454.jpg`, alt: 'עבודת צוות גייטקיפ' },
  { src: `${STORAGE_BASE}/projects/IMG_7152.jpg`, alt: 'פרויקט גדר חשמלית - עבודה מוגמרת' },
];
---
<BaseLayout
  title={page.seo.title}
  description={page.seo.description}
  keywords={page.seo.keywords}
  canonical={page.seo.canonical}
  structuredData={page.structuredData}
>
  <main>
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center pt-24 pb-16 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src={HERO_BG_URL} 
          alt="גדר חשמלית נגד חזירי בר - התקנה מקצועית בשטח חקלאי | גייטקיפ" 
          class="w-full h-[120%] object-cover" 
          loading="eager" 
          fetchpriority="high" 
        />
        <div class="absolute inset-0 bg-background/60"></div>
      </div>
      <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 bg-primary/15 border border-primary/30 text-primary px-5 py-2.5 rounded-full mb-6">
          </div>
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-foreground leading-tight mb-6" style="text-wrap: balance;">
            <span class="text-primary">חזירי בר</span>{' '}מחסלים לך את החלקה?<br/>
            <span class="text-primary">אנחנו עוצרים אותם היום!</span>
          </h1>
          <p class="text-lg sm:text-xl md:text-2xl text-muted-foreground max-w-3xl mx-auto mb-10 leading-relaxed" style="text-wrap: pretty;">
            אל תחכה לפשיטה של הלילה.{' '}
            <strong class="text-foreground">גדר חשמלית מקצועית</strong> היא הפתרון היחיד שעובד.{' '}
            <span class="text-primary font-semibold">גדר חשמלית איכותית ומקצועית</span> – הכל על פי תקן.
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-3 px-8 py-5 md:px-12 md:py-6 rounded-xl text-xl md:text-2xl">
              <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 animate-bounce-subtle"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>התקשר עכשיו</span>
            </a>
            <a href="#calculator" class="inline-flex items-center gap-3 px-6 py-4 md:px-8 md:py-5 rounded-xl text-lg md:text-xl font-bold border-2 border-primary text-primary hover:bg-primary hover:text-primary-foreground transition-all duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="20" x="4" y="2" rx="2"/><line x1="8" x2="16" y1="6" y2="6"/><line x1="16" x2="16" y1="14" y2="18"/><path d="M16 10h.01"/><path d="M12 10h.01"/><path d="M8 10h.01"/><path d="M12 14h.01"/><path d="M8 14h.01"/><path d="M12 18h.01"/><path d="M8 18h.01"/></svg>
              <span>חשב הצעת מחיר</span>
            </a>
          </div>
        </div>
      </div>
      <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-background to-transparent"></div>
    </section>

    <!-- Price Calculator Section (React Island placeholder) -->
    <section id="calculator" class="py-16 md:py-24 bg-secondary/30">
      <div class="container">
        <div class="max-w-2xl mx-auto">
          <div class="text-center mb-10">
            <div class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="16" height="20" x="4" y="2" rx="2"/><line x1="8" x2="16" y1="6" y2="6"/><line x1="16" x2="16" y1="14" y2="18"/><path d="M16 10h.01"/><path d="M12 10h.01"/><path d="M8 10h.01"/><path d="M12 14h.01"/><path d="M8 14h.01"/><path d="M12 18h.01"/><path d="M8 18h.01"/></svg>
              <span class="font-bold">הצעת מחיר מהירה</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-black text-foreground mb-3" style="text-wrap: balance;">
              {page.sections[1].h2}
            </h2>
            <p class="text-muted-foreground" style="text-wrap: pretty;">{page.sections[1].subtitle}</p>
            <p class="text-sm text-muted-foreground mt-2">{page.sections[1].note}</p>
          </div>
          <!-- React Island: PriceEstimator -->
          <PriceEstimatorIsland client:visible />
        </div>
      </div>
    </section>

    <!-- Testimonials Section (React Island placeholder) -->
    <section class="py-20 md:py-28 bg-secondary/20">
      <div class="container">
        <div class="text-center mb-14">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-foreground mb-4" style="text-wrap: balance;">
            השטח שלהם{' '}<span class="text-primary">כבר מוגן</span>
          </h2>
          <p class="text-muted-foreground text-lg md:text-xl max-w-2xl mx-auto" style="text-wrap: pretty;">
            חקלאים מכל הארץ בחרו בגייטקיפ – וזה מה שיש להם להגיד
          </p>
        </div>
        <!-- React Island: Testimonials -->
        <TestimonialsIsland client:visible />
        <div class="text-center mt-14">
          <p class="text-muted-foreground text-lg mb-4" style="text-wrap: pretty;">
            מוכן להגן על השטח שלך גם? דבר איתנו עוד היום
          </p>
          <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 animate-bounce-subtle"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
            <span>התקשר עכשיו</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Trust Reasons Section -->
    <section id="trust" class="py-20 md:py-28 bg-background">
      <div class="container">
        <div class="text-center mb-14">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-foreground mb-4" style="text-wrap: balance;">
            למה לבחור{' '}<span class="text-primary">בגייטקיפ?</span>
          </h2>
          <p class="text-muted-foreground text-lg md:text-xl max-w-2xl mx-auto" style="text-wrap: pretty;">
            {trust.subtitle}
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
          {trust.items.map((item: any) => (
            <div class="group relative card-forest rounded-2xl p-8 md:p-10 text-center cursor-pointer overflow-hidden transition-all duration-500 hover:border-primary/50 min-h-[280px] md:min-h-[320px]">
              <div class="w-20 h-20 rounded-2xl bg-primary/10 flex items-center justify-center mx-auto mb-6 group-hover:bg-primary/20 group-hover:scale-110 transition-all duration-500">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
              </div>
              <h3 class="text-xl md:text-2xl font-black text-foreground mb-4" style="text-wrap: balance;">{item.title}</h3>
              <p class="text-muted-foreground leading-relaxed md:opacity-0 md:translate-y-4 md:group-hover:opacity-100 md:group-hover:translate-y-0 transition-all duration-500" style="text-wrap: pretty;">
                {item.description}
              </p>
              <div class="absolute inset-0 rounded-2xl bg-gradient-to-t from-primary/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
            </div>
          ))}
        </div>
        {trust.internalLinks && (
          <div class="mt-12 flex flex-wrap justify-center gap-x-8 gap-y-3 text-sm">
            {trust.internalLinks.map((link: any) => (
              <a href={link.href} class="text-primary font-semibold hover:underline">{link.label}</a>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- FAQ Section -->
    <section id="faq" class="py-20 md:py-28 bg-background">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-foreground mb-4" style="text-wrap: balance;">
              כל מה שחשוב לדעת{' '}<span class="text-primary">על מיגון השטח</span>
            </h2>
            <p class="text-muted-foreground text-lg md:text-xl" style="text-wrap: pretty;">
              {faq.subtitle}
            </p>
          </div>
          <div class="space-y-4">
            {faq.items.map((item: any) => (
              <details class="card-forest rounded-xl px-6 group">
                <summary class="text-right text-lg font-bold cursor-pointer list-none flex items-center justify-between text-foreground hover:text-primary py-6">
                  <span style="text-wrap: balance;">{item.question}</span>
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-open:rotate-180 flex-shrink-0 mr-2"><path d="m6 9 6 6 6-6"/></svg>
                </summary>
                <p class="text-muted-foreground leading-relaxed pb-6" style="text-wrap: pretty;">{item.answer}</p>
              </details>
            ))}
          </div>
          {faq.internalLinks && (
            <div class="mt-10 p-6 bg-card/50 border border-border rounded-xl">
              <p class="text-muted-foreground leading-relaxed text-center" style="text-wrap: pretty;">
                למידע נוסף על{' '}
                <a href="/installation" class="text-primary font-semibold hover:underline">התקנת גדר חשמלית</a>
                {' '}מקצועית, בקרו בעמוד ההתקנה שלנו. רוצים לדעת{' '}
                <a href="/pricing" class="text-primary font-semibold hover:underline">כמה עולה גדר חשמלית</a>?
                {' '}ראו את המחירון המלא. תוהים{' '}
                <a href="/why-electric-fence" class="text-primary font-semibold hover:underline">למה גדר חשמלית עדיפה</a>
                {' '}על פתרונות אחרים? יש לנו את כל התשובות.
              </p>
            </div>
          )}
          <div class="text-center mt-12">
            <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-3 px-10 py-5 rounded-xl text-xl font-black">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              <span>לייעוץ מקצועי בשטח - דברו איתנו</span>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 lg:py-28 bg-secondary/30">
      <div class="container">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl md:text-5xl font-black text-foreground mb-4" style="text-wrap: balance;">
            {about.h2.split(':')[0]}:{' '}<span class="text-primary">{about.h2.split(':')[1]?.trim() || ''}</span>
          </h2>
          <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto" style="text-wrap: pretty;">
            {about.subtitle}
          </p>
        </div>

        <!-- Story -->
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center mb-20">
          <div class="order-2 lg:order-1">
            <div class="bg-card/50 backdrop-blur-sm border border-border rounded-2xl p-8 lg:p-10">
              <div class="flex items-center gap-3 mb-6">
                <div class="w-1 h-12 bg-primary rounded-full"></div>
                <h3 class="text-2xl font-bold text-foreground">הסיפור שלנו</h3>
              </div>
              {about.story.map((paragraph: any) => (
                <p class="text-lg text-muted-foreground leading-relaxed mt-4" style="text-wrap: pretty;">{paragraph}</p>
              ))}
            </div>
          </div>
          <div class="order-1 lg:order-2">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src="/about-vineyard.jpg"
                alt="כרם במושב לכיש - משק רוזנאי, דור שלישי לחקלאות" 
                class="w-full h-[400px] lg:h-[500px] object-cover"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-background/80 via-transparent to-transparent"></div>
              <div class="absolute bottom-6 right-6 left-6">
                <div class="bg-card/90 backdrop-blur-sm border border-border rounded-xl p-4">
                  <p class="text-sm font-medium text-primary">מושב לכיש</p>
                  <p class="text-muted-foreground text-sm">משק רוזנאי - דור שלישי לגידול ענבים</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Values -->
        <div class="bg-card border border-border rounded-2xl p-6 lg:p-8 mb-20">
          <div class="grid md:grid-cols-3 gap-6">
            {about.values.map((value: any) => (
              <div class="flex items-center gap-4 p-4 rounded-xl bg-secondary/50 hover:bg-secondary transition-colors">
                <div class="w-14 h-14 rounded-xl bg-primary/10 border border-primary/20 flex items-center justify-center flex-shrink-0">
                  <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg>
                </div>
                <div>
                  <h4 class="font-bold text-foreground">{value.title}</h4>
                  <p class="text-sm text-muted-foreground">{value.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Team -->
        <div class="mb-20">
          <h3 class="text-2xl md:text-3xl font-bold text-foreground text-center mb-10">
            הכירו את <span class="text-primary">הצוות</span>
          </h3>
          <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {about.team.map((member: any) => (
              <div class="group bg-card border border-border rounded-2xl p-6 hover:border-primary/50 hover:shadow-lg hover:shadow-primary/5 transition-all duration-300 hover:-translate-y-1">
                <div class="w-16 h-16 rounded-2xl bg-primary/10 border border-primary/20 flex items-center justify-center mb-5 group-hover:bg-primary/20 transition-colors">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                </div>
                <h4 class="text-xl font-bold text-foreground mb-1">{member.name}</h4>
                <p class="text-sm font-medium text-primary mb-3">{member.role}</p>
                <p class="text-sm text-muted-foreground leading-relaxed" style="text-wrap: pretty;">{member.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Gallery -->
        <div>
          <h3 class="text-2xl md:text-3xl font-bold text-foreground text-center mb-10">
            הצוות <span class="text-primary">בפעולה</span>
          </h3>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
            {galleryImages.map((image) => (
              <div class="relative rounded-xl overflow-hidden group bg-secondary/50 aspect-square">
                <img 
                  src={image.src} 
                  alt={image.alt} 
                  class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-105"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
        </div>

        <!-- Internal Links -->
        {about.internalLinks && (
          <div class="mt-16 flex flex-wrap justify-center gap-x-8 gap-y-3 text-sm">
            {about.internalLinks.map((link: any) => (
              <a href={link.href} class="text-primary font-semibold hover:underline">{link.label}</a>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- Urgency Banner -->
    <section id="urgency" class="py-12 md:py-16 bg-destructive/10 border-y border-destructive/30">
      <div class="container">
        <div class="max-w-4xl mx-auto text-center">
          <div class="flex items-center justify-center gap-3 mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-destructive"><path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3"/><path d="M12 9v4"/><path d="M12 17h.01"/></svg>
            <h2 class="text-2xl md:text-3xl font-black text-foreground">{urgency.h2}</h2>
          </div>
          <p class="text-muted-foreground text-lg mb-6 max-w-2xl mx-auto">
            חזירי בר לא מחכים. הם פועלים כל לילה, הורסים שדות שלמים בפשיטה אחת.<br/>
            <strong class="text-foreground">הגדר החשמלית היא ההשקעה הכי משתלמת שתעשה השנה.</strong>
          </p>
          <a href={PHONE_LINK} class="btn-cta-glow inline-flex items-center gap-3 px-8 py-4 rounded-xl text-lg md:text-xl">
