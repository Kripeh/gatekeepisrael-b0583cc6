---
import ServicePageLayout from '../../layouts/ServicePageLayout.astro';
import articleData from '../../../../public/api/pages/blog/boar-history-israel.json';

const page = articleData as any;
const article = page.article;
const PHONE_LINK = 'tel:+972508585310';
---
<ServicePageLayout
  title={page.seo.title}
  description={page.seo.description}
  keywords={page.seo.keywords}
  canonical={page.seo.canonical}
  breadcrumbs={page.breadcrumbs}
  structuredData={page.structuredData}
>
  <article class="py-8 md:py-12">
    <div class="container max-w-4xl">
      <!-- Article Header -->
      <header class="mb-8 md:mb-12">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-foreground mb-6 leading-tight text-balance">
          {article.h1}
        </h1>
        <div class="flex flex-wrap items-center gap-4 text-muted-foreground text-sm mb-6">
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x2="16" y1="2" y2="6"/><line x1="8" x2="8" y1="2" y2="6"/><line x1="3" x2="21" y1="10" y2="10"/></svg>
            <time datetime={article.datePublished}>{article.dateLabel}</time>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
            <span>זמן קריאה: {article.readTime}</span>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
            <span>מאת {article.author}</span>
          </div>
        </div>
        <p class="text-lg md:text-xl text-muted-foreground leading-relaxed text-pretty">
          {article.introduction}
        </p>
      </header>

      <!-- CTA Banner -->
      <div class="bg-primary/10 border border-primary/20 rounded-2xl p-6 mb-10">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div>
            <h3 class="text-lg font-bold text-foreground mb-1">סובלים מחזירי בר? קבלו ייעוץ מקצועי חינם</h3>
            <p class="text-muted-foreground">המומחים שלנו יסייעו לכם לבחור את הפתרון המתאים</p>
          </div>
          <a href={PHONE_LINK} class="btn-cta-glow flex items-center gap-2 px-6 py-3 rounded-xl font-bold whitespace-nowrap">
            <span>ייעוץ חינם</span>
          </a>
        </div>
      </div>

      <!-- Table of Contents -->
      <nav class="bg-card border border-border rounded-xl p-6 mb-10">
        <h2 class="text-lg font-bold mb-4">תוכן העניינים</h2>
        <ul class="space-y-2 text-muted-foreground">
          {article.tableOfContents.map((toc: any) => (
            <li><a href={`#${toc.id}`} class="hover:text-primary transition-colors">{toc.label}</a></li>
          ))}
        </ul>
      </nav>

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        {article.sections.map((section: any) => (
          <section id={section.id} class="mb-12">
            <h2 class="text-2xl md:text-3xl font-bold text-foreground mb-4 text-balance">{section.h2}</h2>
            
            {section.paragraphs && section.paragraphs.map((p: any) => (
              <p class="text-muted-foreground leading-relaxed mb-4 text-pretty">{p}</p>
            ))}

            {section.list && (
              <ul class="space-y-2 text-muted-foreground mb-4">
                {section.list.map((item: any) => (
                  <li class="flex items-start gap-2">
                    <span class="text-primary mt-0.5 flex-shrink-0">•</span>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            )}

            {section.closing && (
              <p class="text-lg text-foreground font-semibold leading-relaxed mt-6 p-6 bg-primary/5 border border-primary/20 rounded-xl text-pretty">
                {section.closing}
              </p>
            )}

            {/* Tables */}
            {section.table && (
              <div class="overflow-x-auto mb-6">
                <table class="w-full border-collapse border border-border text-sm">
                  <thead class="bg-muted">
                    <tr>
                      {section.table.headers.map((h: any) => (
                        <th class="border border-border p-3 text-right font-bold">{h}</th>
                      ))}
                    </tr>
                  </thead>
                  <tbody>
                    {section.table.rows.map((row: any, i: number) => (
                      <tr class={i % 2 === 1 ? 'bg-muted/50' : ''}>
                        {row.map((cell: any) => (
                          <td class="border border-border p-3">{cell}</td>
                        ))}
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            )}

            {/* H3 subsections */}
            {section.h3_items && section.h3_items.map((sub: any) => (
              <div class="mb-8">
                <h3 class="text-xl md:text-2xl font-bold text-foreground mb-3 mt-8">{sub.h3}</h3>
                {sub.paragraphs && sub.paragraphs.map((p: any) => (
                  <p class="text-muted-foreground leading-relaxed mb-4 text-pretty">{p}</p>
                ))}
                {sub.list && (
                  <ul class="space-y-2 text-muted-foreground mb-4">
                    {sub.list.map((item: any) => (
                      <li class="flex items-start gap-2">
                        <span class="text-primary mt-0.5 flex-shrink-0">•</span>
                        <span>{item}</span>
                      </li>
                    ))}
                  </ul>
                )}
                {sub.table && (
                  <div class="overflow-x-auto mb-6">
                    <table class="w-full border-collapse border border-border text-sm">
                      <thead class="bg-muted">
                        <tr>
                          {sub.table.headers.map((h: any) => (
                            <th class="border border-border p-3 text-right font-bold">{h}</th>
                          ))}
                        </tr>
                      </thead>
                      <tbody>
                        {sub.table.rows.map((row: any, i: number) => (
                          <tr class={i % 2 === 1 ? 'bg-muted/50' : ''}>
                            {row.map((cell: any) => (
                              <td class="border border-border p-3">{cell}</td>
                            ))}
                          </tr>
                        ))}
                      </tbody>
                    </table>
                  </div>
                )}
              </div>
            ))}
          </section>
        ))}
      </div>

      <!-- Sources -->
      <details class="bg-card border border-border rounded-xl p-6 mt-10 group">
        <summary class="text-lg font-bold cursor-pointer list-none flex items-center justify-between text-foreground hover:text-primary">
          <span>מקורות ומחקרים ({article.sources.length})</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-open:rotate-180 flex-shrink-0 mr-2"><path d="m6 9 6 6 6-6"/></svg>
        </summary>
        <ul class="mt-4 space-y-2 text-sm text-muted-foreground">
          {article.sources.map((source: any) => (
            <li>
              <a href={source.url} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">{source.title}</a>
            </li>
          ))}
        </ul>
      </details>

      <!-- Related Articles -->
      <section class="mt-12 pt-8 border-t border-border">
        <h2 class="text-2xl font-bold mb-6">מאמרים נוספים</h2>
        <a href="/blog/electrical-fence-technology" class="block bg-card border border-border rounded-2xl p-6 hover:border-primary/40 transition-all">
          <h3 class="text-lg font-bold mb-2">ארכיטקטורה הנדסית ומפרט טכנולוגי של מערכות גידור חשמלי מתקדמות</h3>
          <p class="text-muted-foreground text-sm">מפרט הנדסי מעמיק הכולל פיזיקת Energizer, טכנולוגיית Ultra-Low Impedance, מערכת סולארית אוטונומית ובטיחות.</p>
        </a>
      </section>

      <!-- Internal Links -->
      <nav aria-label="דפים קשורים" class="mt-10 p-6 bg-card/50 border border-border rounded-xl">
        <h3 class="text-lg font-bold mb-3">מוכנים לפעול? הכירו את הפתרונות שלנו:</h3>
        <p class="text-muted-foreground text-sm leading-relaxed mb-4">
          מעוניינים בהגנה על השטח שלכם? למדו על <a href="/installation" class="text-primary hover:underline">תהליך ההתקנה</a> שלנו, בדקו <a href="/pricing" class="text-primary hover:underline">כמה עולה גדר חשמלית</a>, או קראו <a href="/why-electric-fence" class="text-primary hover:underline">למה גדר חשמלית היא הפתרון הטוב ביותר</a>.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="/solar-fence" class="text-primary hover:underline">גדר חשמלית סולארית</a>
          <a href="/home-solutions" class="text-primary hover:underline">גדר חשמלית לבית פרטי</a>
          <a href="/service-areas" class="text-primary hover:underline">אזורי שירות בכל הארץ</a>
        </div>
      </nav>
    </div>
  </article>
</ServicePageLayout>