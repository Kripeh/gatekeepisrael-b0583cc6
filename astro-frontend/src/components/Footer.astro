---
const PHONE_LINK = 'tel:+972508585310';

const footerColumns = {
  services: [
    { label: 'התקנת גדר חשמלית', href: '/installation' },
    { label: 'גדר סולארית', href: '/solar-fence' },
    { label: 'מחירון', href: '/pricing' },
    { label: 'פתרונות לבית', href: '/home-solutions' },
  ],
  products: [
    { label: 'מחוללי מתח סולאריים', href: '/products/solar-energizers' },
    { label: 'מבודדים ורכיבי גידור', href: '/products/insulators' },
    { label: 'מכשור מדידה ובדיקה', href: '/products/testing-equipment' },
  ],
  learn: [
    { label: 'למה גדר חשמלית?', href: '/why-electric-fence' },
    { label: 'מדריך חזירי בר', href: '/blog/boar_history_israel' },
    { label: 'מפרט טכנולוגי', href: '/blog/electrical_fence_technology' },
    { label: 'בלוג', href: '/blog' },
  ],
  regions: [
    { label: 'אזורי שירות', href: '/service-areas' },
    { label: 'חיפה והקריות', href: '/regions/haifa' },
    { label: 'חוף הכרמל', href: '/regions/carmel-coast' },
    { label: 'עמק הירדן', href: '/regions/jordan-valley' },
  ],
};

// Generate schema markup for navigation
const navigationSchema = {
  '@context': 'https://schema.org',
  '@type': 'SiteNavigationElement',
  'name': 'גייטקיפ - ניווט כללי',
  'hasPart': [
    ...footerColumns.services.map(link => ({
      '@type': 'SiteNavigationElement',
      'name': link.label,
      'url': `https://www.gatekeepisrael.co.il${link.href}`
    })),
    ...footerColumns.products.map(link => ({
      '@type': 'SiteNavigationElement',
      'name': link.label,
      'url': `https://www.gatekeepisrael.co.il${link.href}`
    })),
    ...footerColumns.learn.map(link => ({
      '@type': 'SiteNavigationElement',
      'name': link.label,
      'url': `https://www.gatekeepisrael.co.il${link.href}`
    })),
    ...footerColumns.regions.map(link => ({
      '@type': 'SiteNavigationElement',
      'name': link.label,
      'url': `https://www.gatekeepisrael.co.il${link.href}`
    })),
  ]
};
---
<footer class="py-12 bg-card border-t border-border pb-28 md:pb-12">
  <div class="container">
    <div class="max-w-6xl mx-auto">
      <!-- Top Section with Logo and Phone -->
      <div class="flex flex-col md:flex-row items-center justify-between gap-8 mb-12">
        <div class="flex items-center">
          <img src="/logo.png" alt="גייטקיפ" class="h-16 w-auto" />
        </div>
        <a href={PHONE_LINK} class="text-primary font-bold hover:underline text-xl md:text-2xl">
          050-858-5310
        </a>
      </div>

      <!-- 4-Column Navigation Grid -->
      <nav class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
        <!-- Column 1: Services -->
        <div>
          <h3 class="text-foreground font-bold text-lg mb-4">שירותים</h3>
          <ul class="space-y-3">
            {footerColumns.services.map((link) => (
              <li>
                <a href={link.href} class="text-muted-foreground hover:text-primary transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Column 2: Products -->
        <div>
          <h3 class="text-foreground font-bold text-lg mb-4">מוצרים</h3>
          <ul class="space-y-3">
            {footerColumns.products.map((link) => (
              <li>
                <a href={link.href} class="text-muted-foreground hover:text-primary transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Column 3: Learn -->
        <div>
          <h3 class="text-foreground font-bold text-lg mb-4">למידע נוסף</h3>
          <ul class="space-y-3">
            {footerColumns.learn.map((link) => (
              <li>
                <a href={link.href} class="text-muted-foreground hover:text-primary transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Column 4: Regions -->
        <div>
          <h3 class="text-foreground font-bold text-lg mb-4">אזורים</h3>
          <ul class="space-y-3">
            {footerColumns.regions.map((link) => (
              <li>
                <a href={link.href} class="text-muted-foreground hover:text-primary transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </nav>

      <!-- About -->
      <div class="mb-8 py-6 border-y border-border">
        <p class="text-muted-foreground text-sm leading-relaxed text-center mb-4">
          גייטקיפ – מומחים בגדרות חשמליות נגד חזירי בר לחקלאות ולבית פרטי. צוות מקצועי של בוגרי שירות קרבי, מהנדסי חשמל ואגרונומים, מספק שירות התקנה ותחזוקה בכל רחבי ישראל. מושב לכיש, מחוז הדרום.
        </p>
        <div class="flex flex-wrap items-center justify-center gap-6">
          <div class="flex items-center gap-2 text-muted-foreground">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-primary"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
